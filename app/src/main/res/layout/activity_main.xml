<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="client.websocket.arief.com.simplewebsocketclient.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Title"
            tools:text="this is title"
            />

        <TextView
            android:id="@+id/txtCreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:text="Creator"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            />

        <client.websocket.arief.com.simplewebsocketclient.view.CircleImageView
            android:id="@+id/imgUser"
            android:layout_below="@+id/txtCreator"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />

        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgUser"
            android:layout_below="@+id/txtCreator"
            tools:text="username"
            />

        <Button
            android:id="@+id/btnComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/imgUser"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Comments"
            android:textColor="@color/white"

            />


    </RelativeLayout>

</RelativeLayout>
